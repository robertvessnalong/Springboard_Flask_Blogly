{% extends "base.j2" %}
{%block title%}Add Post{%endblock%}
{%block header%}Add Post for {{user.full_name}}{%endblock%}
{%block content%}
{% with messages = get_flashed_messages() %}
  {% if messages %}
    <ul class=flashes>
    {% for message in messages %}
      <li class="alert alert-danger">{{ message }}</li>
    {% endfor %}
    </ul>
  {% endif %}
{% endwith %}
   <form>
     <div class="form-group">
        <label for="title">Title:</label>
       <input id="title" class="form-control" type="text" name="title"/>
  </div>
  <div class="form-group">
    <label for="content">Content</label>
        <textarea name="content" class="form-control" id="content" rows="3"></textarea>
          <button formmethod="submit" type="submit" formaction="/users/{{ user.id }}" class="btn btn-secondary">Cancel</button>
          <button formmethod="post" type="submit" class="btn btn-primary">Submit</button>
    </form>
{%endblock%}